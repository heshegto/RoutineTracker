<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pomadoro_button_padding">

        <Button
            android:id="@+id/routine_tracker"
            style="@style/BottomNavMenu"
            android:text="Routine"
            tools:icon="@drawable/pomadoro"/>

        <Button
            android:id="@+id/pomadoro"
            style="@style/BottomNavMenu"
            android:icon="@drawable/pomadoro"
            android:text="Pomadoro" />
    </LinearLayout>
</LinearLayout>